generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("PG_PRISMA_URL")
}

model User {
  id             String          @id @default(uuid())
  email          String          @unique
  createdAt      DateTime        @default(now()) @map("created_at")
  updatedAt      DateTime        @updatedAt @map("updated_at")
  clerkId        String?         @unique @map("clerk_id")
  noteTimesheets NoteTimeSheet[]

  @@map("user")
}

model NoteTimeSheet {
  id          String @id @default(uuid())
  dateCreated String @unique @map("date_created")
  notes       Note[]
  user        User   @relation(fields: [userId], references: [id])
  userId      String

  @@map("note_timsheets")
}

model Note {
  id              String         @id @default(uuid())
  NoteTimeSheet   NoteTimeSheet? @relation(fields: [noteTimeSheetId], references: [id])
  noteTimeSheetId String?
  text            String?
  title           String         @default("Untitled")
  tags            Tag[]
  createdAt       DateTime       @default(now())

  @@map("note")
}

model Tag {
  id     String  @id @default(uuid())
  Note   Note?   @relation(fields: [noteId], references: [id])
  noteId String?
  tag    String
}
